[PerlCritic]
argv = --profile $ROOT/.perlcriticrc --program-extensions .pl
select = **/*.{pl,pm}
ignore = lib/FOEGCL/Membership/Schema/**/*.pm

[PerlTidy]
diff_on_tidy_error = 1
select = **/*.{pl,pm,t}

[PodSpell]
select = lib/**/*.{pm,pod}
ignore = lib/MM/Schema/**/*.{pm,pod}
ispell_argv = -p $ROOT/.project_dictionary

[SortLines]
diff_on_tidy_error = 1
select = .gitignore

[SortLines::Naturally]
diff_on_tidy_error = 1
select = .project_dictionary